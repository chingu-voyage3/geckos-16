<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ./layouts/head %>
    </head>
    <body>
        <header>
            <% include ./layouts/header %>
        </header>
       <section id="list-meetings">
            <div class="inner-insert container text-center">
                <div class="inner container list">
                    <h2>Current meetings:</h2>
                    <ul class="list-group">
                        <% meeting.forEach(function(meeting) { %>
                            <li class="list-group-item"><a href="#" class="btn btn-link text-dark"><h4><%= meeting.title %></h4><p><%= meeting.description %></p></a></li>
                        <% }); %>
                    </ul>
                </div>
            </div>
       </section>
        <footer>
            <% include ./layouts/footer %>
        </footer>
    </body>
</html>